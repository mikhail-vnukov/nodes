{
  "name": "graph-task-manager",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "test": "playwright test --project=dev",
    "test:full": "playwright test --project=chromium-full --project=firefox --project=webkit"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.52.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "neo4j-driver": "^5.28.1",
    "openai": "^5.0.1",
    "reactflow": "^11.11.4",
    "zustand": "^5.0.5"
  }
}
